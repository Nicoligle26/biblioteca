<p><%= link_to "Add new book", {:action => 'new' }%></p>
<% if @books.blank? %>
  <p>There are not any books currently in the system.</p>
<% else %>
  <div class="container">
    <div style=" margin-top: 5rem;margin-top: 5rem; justify-content: space-between;  " class=" row row-cols-4"  id = "books">
      <% @books.each do |c| %>
        <div class="col" style="margin-bottom: 1.5rem; justify-content: center; align-items: center;  border-radius: 12px;">
          <div class="card" style="width: 18rem;">
            <div style=" text-align:center;">               
            <%= link_to image_tag(c.image), {:action => 'show', :id => c.id}%>
            </div>
            <div class="card-body">
              <h5 class="card-title"><% c.name %></h5>
              <div class="row">
               <div class="col">
               <a href="#" class="btn btn-primary">Buy</a>
              </div>
               <div class="col" style="width: 1.8rem">
                              <a href="#" class="btn btn-info">Favorites</a>

              </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
