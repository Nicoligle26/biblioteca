<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
      <div style="display: flex; margin-top: 10rem; justify-content: center;"  id = "books">
            <% @books.each do |c| %>
                  <div>
                        <img width="80%" src="<%= c.image %>">
                  </div>
            <% end %>
      </div>
<% end %>